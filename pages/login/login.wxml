<!--pages/login/login.wxml-->
<view class="container">
  <view class="title">欢迎回来!</view>
  <view class="sub-title">Please login to your accounts</view>
  <van-cell-group class="form" border="{{false}}">
    <van-field value="{{ phone }}" label="手机号" placeholder="请输入用户名" />

    <van-field value="{{ password }}" label="密码" placeholder="密码必须为字母开头" type="{{passwordShow?'text':'password'}}" right-icon="{{passwordShow?'eye':'closed-eye'}}" bind:click-icon="onTapPasswordShow" />

    <text class="forget">忘记密码?</text>
  </van-cell-group>
  <van-button class="btn btn--login" type="primary" size="large" color="#0037ae" round>登录</van-button>
  <van-button class="btn btn--register" size="large" round>注册</van-button>
</view>